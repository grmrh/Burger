<div class="container">
  <div class="row">
    <div class="col-md-12 order-section">

        <form class="create-burger-form">
          <fieldset>
            <legend></legend>
            <div class="form-group">
              <label class="form-control-label" for="burger_name"></label>
              <input type="text" id="burger_name" name="burger_name" placeholder="Enter a burger name" class="form-control-lg">
            </div>
          </fieldset>
          <button type="submit" class="btn btn-primary mb-3">Order</button>
        </form>
        <label>Enter a burger you want to order and click the "Order" button</label>

    </div>
  </div>
  <div class="row show-progress">

    <div class="col-md-6">
      <h3>You designed!</h3>
      <ul class="list-group burger_created">

        {{#each burgers}} {{#unless devoured}} {{!-- {{>partials/burger-item created_name=burger_name eaten=false }} --}}
        <li class="list-group-item d-flex justify-content-between align-items-center">
          {{burger_name}}
          <button type="button" class="btn btn-primary devour" data-id="{{this.id}}" data-burgerName="{{this.burger_name}}" data-devoured="{{eaten}}">Devour!</button>
        </li>
        {{/unless}} {{/each}}
      </ul>
    </div>


    <div class="col-md-6">
      <h3>You ate up!</h3>
      <ul class="list-group burger_devoured">

        {{#each burgers}} {{#if devoured}} {{!-- {{>partials/burger-item devoured_name=burger_name eaten=true }} --}}
        <li class="list-group-item d-flex justify-content-between align-items-center">
          {{burger_name}} {{!--
          <label>You ate it up!</label> --}}
        </li>
        {{/if}} {{/each}}
      </ul>
    </div>

  </div>
</div>